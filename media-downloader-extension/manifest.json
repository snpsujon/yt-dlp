{
  "manifest_version": 3,
  "name": "Universal Media Downloader",
  "version": "1.0",
  "description": "Universal Media Downloader is a Chrome extension that allows users to download media files from various websites.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
